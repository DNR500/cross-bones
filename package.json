{
  "name": "cross-bones",
  "version": "0.0.0",
  "description": "cross-bones",
  "main": "index.js",
  "scripts": {
    "versions:check": "ncu",
    "versions:update": "ncu -u",
    "dependencies:issues": "node scripts/depcheck",
    "dependencies:usage": "node scripts/depcheck usage",
    "metrics": "rm -rf report/plato && plato -r -d report/plato --eslint .eslintrc.browser.json src",
    "start:node": "node build/node/server.js",
    "stop:node": "pkill -f 'cross-bones-node-service'",
    "lint:js": "eslint './**/*.js' --config '.eslintrc.browser.json' --ignore-path '.eslintignore.browser'",
    "lint:json:test": "jsonlint-cli ./src/**/*.json",
    "lint:json": "jsonlint-cli .babelrc && jsonlint-cli .eslintrc.browser.json && jsonlint-cli ./src/**/*.json && jsonlint-cli ./test/**/*.json && jsonlint-cli ./scripts/**/*.json",
    "lint": "npm run lint:json && npm run lint:js",
    "casperjs": "mocha-casperjs test/casper/**/*.casper.js && npm run stop:node",
    "test:karma": "karma start",
    "test:node": "mocha --compilers js:babel-core/register 'src/node/**/*.spec.js'",
    "test:casper": "npm run start:node & npm run casperjs",
    "test": "npm run test:node && npm run test:karma && npm run test:casper",
    "scss": "node-sass --source-map-embed true -o build/public/css src/public/scss",
    "autoprefixer": "postcss -u autoprefixer -r build/public/css/*",
    "compile:html": "static-react src/public/index.html.js > build/public/index.react.html",
    "compile:js:node": "babel src/node --out-dir build/node --source-maps inline --ignore spec.js",
    "compile:js:public": "rm -r build//public/js && webpack -p",
    "compile:css": "npm run scss && npm run autoprefixer",
    "compile": "npm run compile:js:node && npm run compile:js:public && npm run compile:css && npm run compile:html",
    "build": "npm run lint && npm run test:karma && npm run compile && npm run test:casper",
    "watch:html": "watch -c 'npm run compile:html' -p './src/public/**/*.html.js'",
    "watch:css": "node-sass --source-map-embed true -o build/public/css src/public/scss --watch",
    "watch:js:public": "webpack --watch & watch -c 'npm run compile:html' -p './build/public/js/**/*.js'",
    "watch:js:node": "watch -c 'npm run compile:js:node' -p './src/node/**/*.js' & nodemon -w ./build/node ./build/node/server.js",
    "watch": "npm run watch:js:public & npm run watch:css & npm run watch:html & npm run watch:js:node"
  },
  "engineStrict": true,
  "engines": {
    "node": "6.9.0",
    "npm": "3.10.8"
  },
  "author": "Nathan Richards <nathan.richards.500@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "express": "^4.14.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-react": "^6.11.1",
    "bootstrap-sass": "^3.3.6",
    "casper-chai": "^0.3.0",
    "casperjs": "^1.1.3",
    "chai": "^3.5.0",
    "depcheck": "^0.6.4",
    "es5-shim": "^4.5.9",
    "es6-shim": "^0.35.1",
    "eslint": "^3.5.0",
    "eslint-plugin-react": "^6.3.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.15.0",
    "jsonlint-cli": "^1.0.1",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-es6-shim": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.0.2",
    "mocha-casperjs": "^0.5.7",
    "node-sass": "^3.4.2",
    "nodemon": "^1.11.0",
    "npm-check-updates": "^2.8.0",
    "phantomjs-prebuilt": "^2.1.7",
    "plato": "^1.7.0",
    "postcss-cli": "^2.5.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "sinon": "^1.17.3",
    "static-react": "^3.2.0",
    "watch-cli": "^0.2.1",
    "webpack": "^1.12.14",
    "webpack-manifest-plugin": "^1.0.1"
  }
}
