{
  "name": "cross-bones",
  "version": "0.0.0",
  "description": "cross-bones",
  "main": "index.js",
  "scripts": {
    "versions:check": "ncu -x eslint-plugin-jsx-a11y",
    "versions:update": "ncu -u -x eslint-plugin-jsx-a11y",
    "report:dep:issues": "node scripts/depcheck",
    "report:dep:usage": "node scripts/depcheck usage",
    "report:metrics": "rm -rf report/plato && plato -r -d report/plato --eslint .eslintrc.json src",
    "report:bundles": "rm -rf build/public/bundles && mkdir -p report/bundles/ && webpack --config webpack.report.config.js",
    "report": "npm run report:dep:issues && npm run report:dep:usage && npm run report:metrics && npm run report:bundles",
    "start:pm2": "pm2 start ecosystem.json",
    "stop:pm2": "pm2 stop ecosystem.json && pm2 kill",
    "start:node": "node build/node/server.js",
    "stop:node": "pkill -f 'cross-bones-node-service'",
    "lint:js": "eslint './**/*.js' --config '.eslintrc.json' --ignore-path '.eslintignore'",
    "lint:json:test": "jsonlint-cli ./src/**/*.json",
    "lint:json": "jsonlint-cli .babelrc && jsonlint-cli ./*.json && jsonlint-cli ./src/**/*.json && jsonlint-cli ./test/**/*.json && jsonlint-cli ./scripts/**/*.json",
    "lint": "npm run lint:json && npm run lint:js",
    "casperjs": "mocha-casperjs test/casper/**/*.casper.js && npm run stop:node",
    "test:karma": "karma start",
    "test:node": "mocha --compilers js:babel-core/register 'src/node/**/*.spec.js'",
    "test:casper": "npm run start:node & npm run casperjs",
    "test": "npm run test:node && npm run test:karma && npm run test:casper",
    "compile:html": "node scripts/generate-static-html -s './src/public/**/*.html.js' -o './build/public/'",
    "compile:assets": "rm -rf build/public/assets && mkdir -p build/public/assets && cp -a src/public/assets/. build/public/assets/",
    "compile:node": "babel src/node --out-dir build/node --source-maps inline --ignore spec.js",
    "compile:public": "webpack",
    "compile": "npm run compile:node && npm run compile:public && npm run compile:html && npm run compile:assets",
    "build": "npm run lint && npm run test:karma && npm run compile && npm run test:casper",
    "prepublish": "npm run build",
    "watch:html": "watch -c 'npm run compile:html' -p './src/public/**/*.html.js' & watch -c 'npm run compile:html' -p './src/public/**/*.marko'",
    "watch:assets": "watch -c 'npm run compile:assets' -p './src/public/assets/**/*'",
    "watch:public": "webpack --watch & watch -c 'npm run compile:html' -p './build/public/bundles/**/*.*'",
    "watch:node": "watch -c 'npm run compile:node' -p './src/node/**/*.js' & nodemon -w ./build/node ./build/node/server.js",
    "watch": "npm run watch:public & npm run watch:html & npm run watch:node & npm run watch:assets",
    "prepush": "npm run lint && npm run test:node && npm run test:karma"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DNR500/cross-bones.git"
  },
  "engineStrict": true,
  "engines": {
    "node": "6.9.0",
    "npm": "3.10.8"
  },
  "author": "Nathan Richards <nathan.richards.500@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "express": "^4.14.0",
    "pm2": "^2.1.5"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.7.4",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-react": "^6.11.1",
    "bootstrap-sass": "^3.3.6",
    "casper-chai": "^0.3.0",
    "casperjs": "^1.1.3",
    "chai": "^3.5.0",
    "css-loader": "^0.26.0",
    "cssnano": "^3.8.0",
    "depcheck": "^0.6.4",
    "es5-shim": "^4.5.9",
    "es6-shim": "^0.35.1",
    "eslint": "^3.10.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "glob": "^7.1.1",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.15.0",
    "husky": "^0.11.9",
    "jsonlint-cli": "^1.0.1",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-es6-shim": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "marko": "^3.12.1",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.0.2",
    "mocha-casperjs": "^0.5.7",
    "node-sass": "^3.4.2",
    "nodemon": "^1.11.0",
    "npm-check-updates": "^2.8.0",
    "phantomjs-prebuilt": "^2.1.7",
    "plato": "^1.7.0",
    "postcss-cli": "^2.5.1",
    "postcss-loader": "^1.1.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "sass-loader": "^4.0.2",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.1",
    "watch-cli": "^0.2.1",
    "webpack": "1.13.3",
    "webpack-cleanup-plugin": "^0.4.1",
    "webpack-manifest-plugin": "^1.0.1",
    "webpack-visualizer-plugin": "^0.1.5"
  }
}
